{
  "name": "ytest",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "android": "react-native run-android",
    "android:generate-keystore-file": "node ./build_scripts/android_generate_new_keystore_file.js",
    "android:prod": "cd android && ./gradlew assembleRelease",
    "android:tests": "react-native run-android --variant=automatedTestsDebug",
    "android:beta": "cd android && fastlane android beta && cd ..",
    "android:test": "mocha tests --android",
    "android:deploy": "cd android && fastlane android deploy && cd ..",
    "ios": "react-native run-ios",
    "ios:beta": "cd ios && fastlane ios beta && cd ..",
    "ios:prod": "cd ios && fastlane ios deploy && cd ..",
    "ios:test": "mocha tests --ios",
    "ios:deploy": "cd ios && fastlane ios deploy && cd ..",
    "test": "jest",
    "detox:ios:debug:build": "detox build  --configuration ios.sim.debug",
    "detox:ios:debug:test": "detox test --take-screenshots --configuration ios.sim.debug --artifacts-location ./artifacts/ios",
    "detox:android:debug:build": "detox build  --configuration android.emu.debug",
    "detox:android:debug:test": "detox test --take-screenshots --configuration android.emu.debug --artifacts-location ./artifacts/android",
    "ci:detox:android:build": "detox build --configuration android.emu.release",
    "ci:detox:android:test": "detox test --take-screenshots --record-videos all --cleanup  --record-logs all --configuration android.emu.release --artifacts-location ./artifacts/android",
    "ci:detox:ios:build": "detox build --configuration ios.sim.release",
    "ci:detox:ios:test": "detox test --take-screenshots --record-videos all --cleanup  --record-logs all --configuration ios.sim.release --artifacts-location ./artifacts/ios"
  },
  "dependencies": {
    "native-base": "^2.11.0",
    "react": "16.6.3",
    "react-native": "0.57.8",
    "react-native-gesture-handler": "^1.0.15",
    "react-navigation": "^3.0.9",
    "redux": "^4.0.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@wdio/sauce-service": "^5.4.8",
    "appium": "^1.10.1",
    "appium-doctor": "^1.8.0",
    "babel-jest": "24.1.0",
    "chai": "^4.2.0",
    "detox": "^10.0.12",
    "jest": "^24.1.0",
    "metro-react-native-babel-preset": "0.51.1",
    "mocha": "^5.2.0",
    "webdriverio": "^5.4.8"
  },
  "jest": {
    "preset": "react-native"
  },
  "bundledDependencies": [
    "react",
    "react-native"
  ],
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/ytest.app",
        "build": "xcodebuild -project ios/ytest.xcodeproj -scheme ytest -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone X"
      },
      "ios.sim.release": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/ytest.app",
        "build": "xcodebuild -project ios/ytest.xcodeproj -scheme ytest -configuration Release -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone X"
      },
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.attached",
        "name": "emulator-5554"
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
        "build": "cd android && ./gradlew assembleRelease assembleAndroidTest -D testBuildType=release && cd ..",
        "type": "android.attached",
        "name": "emulator-5554"
      }
    },
    "test-runner": "jest"
  }
}
